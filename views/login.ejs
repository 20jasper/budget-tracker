<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login Page</title>
    <link rel="stylesheet" href="css/style.css" />
  </head>
  <body>
    <% if (locals.messages.errors) { %> <% messages.errors.forEach( el => { %>
    <div class="alert alert-danger"><%= el.msg %></div>
    <% }) %> <% } %> <% if (locals.messages.info) { %> <% messages.info.forEach(
    el => { %>
    <div class="alert alert-danger"><%= el.msg %></div>
    <% }) %> <% } %>
    <div class="container">
      <h1 class="margin-bottom-900">Login</h1>
      <form action="/login" method="POST" class="container_1">
        <input
          type="email"
          name="email"
          placeholder="Email"
          class="input-field | margin-bottom-400"
        />
        <input
          type="password"
          name="password"
          placeholder="Password"
          class="input-field | margin-bottom-400"
        />
        <input type="submit" value="Sign In" class="btn-primary">
      </form>
    </div>
  </body>
</html>

